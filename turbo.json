{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:js": {
      "cache": false,
      "passThroughEnv": ["VP_TOKEN"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "tsconfig.json",
        "biome.json",
        "package.json",
        "src/**/*",
        "tamagui-build.js",
        "externalNodePlugin.js"
      ],
      "outputs": [".next/**/*", "dist/**/*", "types/**/*"],
      "passThroughEnv": ["VP_TOKEN"]
    },
    "check": {
      "cache": false,
      "outputs": [],
      "passThroughEnv": ["VP_TOKEN"]
    },
    "typecheck": {
      "cache": false,
      "outputs": [],
      "passThroughEnv": ["VP_TOKEN"]
    },
    "test": {
      "dependsOn": ["^build:js"],
      "outputs": [],
      "passThroughEnv": ["VP_TOKEN"]
    },
    "clean": {
      "outputs": ["dist/**/*"],
      "cache": false,
      "passThroughEnv": ["VP_TOKEN"]
    },
    "clean:build": {
      "outputs": [],
      "cache": false,
      "passThroughEnv": ["VP_TOKEN"]
    },
    "lint": {
      "outputs": [],
      "passThroughEnv": ["VP_TOKEN"]
    },
    "lint:fix": {
      "cache": false,
      "outputs": ["src/**/*"],
      "passThroughEnv": ["VP_TOKEN"]
    }
  }
}
